rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to contacts collection for development
    match /contacts/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to paymentRequests collection for development
    match /paymentRequests/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to chat analytics collections for development
    match /chatQuestions/{document} {
      allow read, write: if true;
    }
    
    match /aiResponses/{document} {
      allow read, write: if true;
    }
    
    // For production, you should implement proper authentication
